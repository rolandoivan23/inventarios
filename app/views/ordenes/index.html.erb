        <h2>Requisiciones pendientes de auntorizar o cancelar</h2>
          <%if @requis_pendientes.respond_to?("each")%>
        <table class="index">
          <tr class="encabezado">
            <th>No. Req.</th>
            <th>Usuario</th>
            <th>Proveedor</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>verificar Requisicion</th>
          </tr>
            <%@requis_pendientes.each do |requi|%>
              <%usua = Usuarios.find(requi.usuario_id)%>
              <%prove = Proveedore.find_by_proveedor_id(requi.proveedor_id)%>
              <div>
                <tr>
                  <th class="id"><%= requi.requisicion_id%></th>
                  <th class="nombre"><%=usua.name%></th>
                  <th class="nombre"><%=prove.nombre%></th>
                  <th class="fecha"><%=requi.fecha%></th>
                  <th class="total"><%=requi.total%></th>
                  <th class="enlaze"><%= link_to "Verificar requisicion", checar_requisicion_path(requi.requisicion_id)%></th>
              </tr>
              </div>
            <%end%>
        </table>
          <%else%>
            <%usuario = Usuario.find(@requis_pendientes.usuario_id)%>
            <%prove = Proveedore.find(@requis_pendientes.proveedor_id)%>
            <div>
                num req:<%= requi.requisicion_id%>
                usuario: <%=usuario.nombre%>
                proveedor: <%= prove.nombre %>
                fecha: <%=requi.fecha%>
                total: <%=requi.total%>
                <%= link_to "Verificar requisicion", checar_requisicion_path(requi.requisicion_id)%>
              </div>
          <%end%>
