  <div id="CONTENT_REQUI">
    <%if @arts_requi.size == 0%>
    <span style="font-size: 35px; text-decoration: underline; azimuth: center; padding: 10px;">Agregue por lo menos un elemento</span>
      <%else %>
    <table class="index">
      <tr class="encabezado">
        <th>No. Req.</th>
        <th>Descripcion Articulo</th>
        <th>Cantidad</th>
        <th>Precio</th>
        <th>Subtotal</th>
      </tr>
          <%@arts_requi.each do |art_req|%>
            <div id="ARTICULOS_REI">
              <%desc = Articulo.find_by_articulo_id(art_req.articulo_id)%>
              <tr>
              <th class="id"><%=art_req.requisicion_id%></th>
              <th class="descripcion"><%=desc.descripcion %></th>
              <th class="stock"><%=art_req.cantidad%></th>
              <th class="precio"><%=art_req.precio%></th>
              <th class="sub_total"><%=art_req.sub_total%></th>
            </tr>
            </div>
          <%end%>
    </table>
     </div>
      <%end%>
  </div>

  <span style="font-size: 25px; text-decoration: blink; color: aquamarine; font-style: italic; margin: 10px; padding: 4px;"><%=link_to "Agregar articulo", agregar_articulo_path(@requi.requisicion_id)%></span>
  <div id="BOTON_CREAR_REQUI">
    <%= form_tag(finalizar_path(@requi.requisicion_id), :method => "post") do %>
      <%= submit_tag("CREAR") %>
    <% end %>
  </div>
